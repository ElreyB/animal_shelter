
<% if @admin == true %>
  <h2>Here are you current animal residents:</h2>
    <% if @animals.any? %>
      <ul>
        <% @animals.each do |animal| %>
          <li>
            <a href="/animal/<%= animal.id %>"> <%= animal.name %> </a>
          </li>
        <% end %>
      </ul>
    <% else %>
      <h3>Current no animals in our database.</h3>
    <% end %>
    <form action="/admin/animal/add" method="post">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="name" class="form-control">
      </div>
      <div class="form-group">
        <label for="gender">Gender:</label>
        <input type="text" name="gender" class="form-control">
      </div>
      <div class="form-group">
        <label for="admitted">Admitted:</label>
        <input type="date" name="admitted" class="form-control">
      </div>
      <div class="form-group">
        <label for="type">Type:</label>
        <input type="text" name="type" class="form-control">
      </div>
      <div class="form-group">
        <label for="breed">Breed:</label>
        <input type="text" name="breed" class="form-control">
      </div>
      <button type="submit" class="btn">Add</button>
    </form>

<% elsif @admin == "longest residents" %>
  <h2>Longest Residents</h2>
<% end %>
